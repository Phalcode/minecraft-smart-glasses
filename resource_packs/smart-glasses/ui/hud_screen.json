{
  "hud_title_text": {
    "modifications": [
      {
        "array_name": "bindings",
        "operation": "insert_front",
        "value": [
          {
            "binding_type": "global",
            "binding_name": "#hud_title_text_string",
            "binding_name_override": "#text"
          }
        ]
      },
      {
        "array_name": "bindings",
        "operation": "insert_back",
        "value": [
          {
            "binding_type": "view",
            "source_property_name": "(not ('%.7s' * #text = '_sglss:'))",
            "target_property_name": "#visible"
          }
        ]
      }
    ]
  },

  "root_panel": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "smart_glasses_display@smart_glasses_hud.main": {
              "anchor_from": "bottom_left",
              "anchor_to": "bottom_left",
              "offset": [10, -10]
            }
          }
        ]
      }
    ]
  }
}
